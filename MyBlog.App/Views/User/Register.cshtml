@model MyBlog.App.ViewModels.Users.Response.UserRegisterViewModel
@{
    ViewData["Title"] = "Регистрация"; 
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js"></script>

<div class="max-width-550 m-auto mb-5">
    <form class="mt-5" method="post" asp-controller="User" asp-action="Register">
        <h3>Регистрация пользователя</h3>
        <hr  class="hr"/>
        <div asp-validation-summary="ModelOnly" class="text-danger fs-6"></div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
            <label asp-for="FirstName" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="FirstName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="FirstName" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="SecondName" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="SecondName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="SecondName" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="LastName" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="LastName" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="EmailReg" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="EmailReg" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="EmailReg" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="Login" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Login" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Login" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="BirthDate" class="form-label col-sm-6 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="BirthDate" type="date" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="BirthDate" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="PasswordReg" class="form-label col-sm-6 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="PasswordReg" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="PasswordReg" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="PasswordConfirm" class="form-label col-sm-6 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="PasswordConfirm" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="PasswordConfirm" class="text-danger error-message"></span>
        </div>

        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
    </form>
</div>

