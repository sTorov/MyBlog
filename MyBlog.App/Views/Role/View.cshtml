@model MyBlog.Services.ViewModels.Roles.Request.RoleViewModel
@{
    ViewData["Title"] = "Роль";

    var defaultNameCheck = Model.Name == "Admin" || Model.Name == "Moderator" || Model.Name == "User";
}

<div class="m-auto max-width-600">
    <h3 mt-5>Просмотр роли</h3>
    <hr class="hr" />
    <div class="card border-muted shadow-lg h-75">
        <div class="card-body">
            <h3 class="fs-2">
                @Model.Name
            </h3>
            <p class="card-text text-muted pb-1">
                @Model.Description
            </p>
            <div class="pb-4">
                <a class="m-3 text-decoration-none" asp-action="GetUsers" asp-controller="User" asp-route-roleId="@Model.Id">Пользователи</a>
            </div>
            <div class="d-flex justify-content-end">
                <form method="post" name="delete" asp-action="Delete" asp-controller="Role">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="btn-group">
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-controller="Role" asp-route-id="@Model.Id">
                            Редактировать
                        </a>
                        <button type="submit" class="btn btn-outline-danger btn-sm @(defaultNameCheck ? "disabled" : "")">Удалить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
