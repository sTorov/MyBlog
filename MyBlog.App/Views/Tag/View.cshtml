@model MyBlog.App.ViewModels.Tags.Request.TagViewModel
@{
    ViewData["Title"] = "Роль";
}

<div class="m-auto max-width-450">
    <h3 mt-5>Просмотр тега</h3>
    <hr class="hr" />
    <div class="card border-muted shadow-lg h-75">
        <div class="card-body">
            <h3 class="fs-2">
                @Model.Name
            </h3>
            <div class="pb-4">
                <a class="m-3 text-decoration-none" asp-action="GetPosts" asp-controller="Post" asp-route-tagId="@Model.Id">Статьи</a>
            </div>
            <div class="d-flex justify-content-end">
                <form method="post" name="delete" asp-action="Remove" asp-controller="Tag">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="btn-group">
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-controller="Tag" asp-route-id="@Model.Id">
                            Редактировать
                        </a>
                        <button type="submit" class="btn btn-outline-danger btn-sm">Удалить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
